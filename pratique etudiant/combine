class Course:
    def __init__(self, name, credits):
        self.name = name
        self.credits = credits

class Student:
    def __init__(self, name, age):
        self._name = name
        self._age = age
        self._courses = []

    def add_course(self, course):
        self._courses.append(course)

    @property
    def name(self):
        return self._name

    @property
    def age(self):
        return self._age

    @property
    def courses(self):
        return self._courses

students = []
while True:
    student_name = input("Entrez le nom ou 'fin' pour terminer) : ")
    if student_name.lower() == 'fin':
        break
    student_age = int(input("l'age de l'etudiant : "))
    student = Student(student_name, student_age)
    print(f"Ajout de l'eleve {student.name}...")
    while True:
        course_name = input("nom du cours ou 'fin' pour terminer) : ")
        if course_name.lower() == 'fin':
            break
        course_credits = int(input("nombre de crÃ©dits pour ce cours : "))
        course = Course(course_name, course_credits)
        student.add_course(course)
        print(f"Ajout du cours {course.name} pour {student.name}...")
    students.append(student)

print("\nDetails des etudiants :")
for student in students:
    print(f"\nNom: {student.name}")
    print(f"Age: {student.age}")
    print("Cours suivis:")
    for course in student.courses:
        print(f"- {course.name} ({course.credits} credits)")
class Livre:
    def __init__(self, titre, auteur, genre, prix ):
        self.titre = titre
        self.auteur = auteur
        self.genre = genre
        self.prix = prix
        

    def __str__(self):
        return f"{self.titre} - {self.auteur}"

    def afficher_details(self):
        print("Titre:", self.titre)
        print("Auteur:", self.auteur)
        print("Genre:", self.genre)
        print("Prix:", self.prix)
    


class Librairie:
    def __init__(self):
        self.livres = {}

    def ajouter_livre(self, livre):
        self.livres[livre.titre] = livre

    def supprimer_livre(self, titre):
        if titre in self.livres:
            del self.livres[titre]
            print("Livre supprimé avec succès.")
        else:
            print("Livre non trouvé dans la librairie.")

    def chercher_livre(self, titre):
        if titre in self.livres:
            print("Détails du livre recherché:")
            self.livres[titre].afficher_details()
        else:
            print("Livre non trouvé dans la librairie.")

    def afficher_livres(self):
        print("Livres disponibles dans la librairie:")
        for livre in self.livres.values():
            print(livre)

    def rechercher_par_genre(self, genre):
        livres_genre = [livre for livre in self.livres.values() if livre.genre == genre]
        if livres_genre:
            print(f"Livres dans le genre '{genre}':")
            for livre in livres_genre:
                print(livre)
        else:
            print(f"Aucun livre trouvé dans le genre '{genre}'.")


librairie = Librairie()

# liste de livre
livre1 = Livre("2002" , "Naruto" , "Masashi Kishimoto" ,"Manga" , )
livre2 = Livre("Dofus T.01" , "Halden" , "2017" , "Science-fiction" , )
livre3 = Livre("2019" , "Azra" , "Science-fiction" ,"Manga" ,  )

# Ajout
librairie.ajouter_livre(livre1)
librairie.ajouter_livre(livre2)
librairie.ajouter_livre(livre3)

# recherche
librairie.chercher_livre("2019")

# Suppression 
librairie.supprimer_livre("Dofus T.01")

# Affichage
librairie.afficher_livres()

# Genre
librairie.rechercher_par_genre("Manga")